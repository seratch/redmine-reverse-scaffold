<%@val s: skinny.Skinny %>
<%@val items: Seq[model.Workflow] %>
<%@val totalPages: Int %>
<%@val page: Int = s.params.page.map(_.toString.toInt).getOrElse(1) %>

<%-- Be aware of package imports.
 1. src/main/scala/templates/ScalatePackage.scala
 2. scalateTemplateConfig in project/Build.scala
--%>

<h3>${s.i18n.getOrKey("workflow.list")}</h3>
<hr/>
#for (notice <- s.flash.notice)
  <p class="alert alert-info">${notice}</p>
#end

#if (totalPages > 1)
  <ul class="pagination">
    <li>
      <a href="${s.url(Controllers.workflows.indexUrl, "page" -> 1)}">&laquo;</a>
    </li>
    <% val maxPage = Math.min(totalPages, if (page <= 5) 11 else page + 5) %>
    #for (i <- Math.max(1, maxPage - 10) to maxPage)
      <li class="${if (i == page) "active" else ""}">
        <a href="${s.url(Controllers.workflows.indexUrl, "page" -> i)}">${i}</a>
      </li>
    #end
    <li>
      <a href="${s.url(Controllers.workflows.indexUrl, "page" -> totalPages)}">&raquo;</a>
    </li>
    <li>
      <span>${Math.min(page, totalPages)} / ${totalPages}</span>
    </li>
  </ul>
#end

<table class="table table-bordered">
<thead>
  <tr>
    <th>${s.i18n.getOrKey("workflow.id")}</th>
    <th>${s.i18n.getOrKey("workflow.trackerId")}</th>
    <th>${s.i18n.getOrKey("workflow.oldStatusId")}</th>
    <th>${s.i18n.getOrKey("workflow.newStatusId")}</th>
    <th>${s.i18n.getOrKey("workflow.roleId")}</th>
    <th>${s.i18n.getOrKey("workflow.assignee")}</th>
    <th>${s.i18n.getOrKey("workflow.author")}</th>
    <th>${s.i18n.getOrKey("workflow.theType")}</th>
    <th>${s.i18n.getOrKey("workflow.fieldName")}</th>
    <th>${s.i18n.getOrKey("workflow.rule")}</th>
    <th></th>
  </tr>
</thead>
<tbody>
  #for (item <- items)
  <tr>
    <td>${item.id}</td>
    <td>${item.trackerId}</td>
    <td>${item.oldStatusId}</td>
    <td>${item.newStatusId}</td>
    <td>${item.roleId}</td>
    <td>${item.assignee}</td>
    <td>${item.author}</td>
    <td>${item.theType}</td>
    <td>${item.fieldName}</td>
    <td>${item.rule}</td>
    <td>
      <a href="${s.url(Controllers.workflows.showUrl, "id" -> item.id)}" class="btn btn-default">${s.i18n.getOrKey("detail")}</a>
      <a href="${s.url(Controllers.workflows.editUrl, "id" -> item.id)}" class="btn btn-info">${s.i18n.getOrKey("edit")}</a>
      <a data-method="delete" data-confirm="${s.i18n.getOrKey("workflow.delete.confirm")}"
        href="${s.url(Controllers.workflows.destroyUrl, "id" -> item.id)}" rel="nofollow" class="btn btn-danger">${s.i18n.getOrKey("delete")}</a>
    </td>
  </tr>
  #end
  #if (items.isEmpty)
  <tr>
    <td colspan="11">${s.i18n.getOrKey("empty")}</td>
  </tr>
  #end
</tbody>
</table>

<a href="${s.url(Controllers.workflows.newUrl)}" class="btn btn-primary">${s.i18n.getOrKey("new")}</a>
